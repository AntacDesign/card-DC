---
interface Props {
  title: string;
  description: string;
  author: string;
}

const { title, description, author } = Astro.props;
---

<article
  class="bg-card-100 rounded-lg shadow-lg shadow-slate-200 w-[21rem] pb-0 flex flex-col "
>
<figure class="h-[9.5rem] w-min-[21rem] m-4 overflow-hidden rounded-lg ">
    <img src="/cactus_img.jpg" class="object-cover rounded-lg h-full" />
</figure>
  <p
    class=" mb-4 text-[0.625rem] rounded-2xl bg-chip-100 text-chip-200 font-semibold w-min py-[0.375rem] ml-4 px-4"
  >
    Design
  </p>
  <h1 class="text-lg font-semibold text-card-400 px-4 mb-[0.375rem]">
    {title}
  </h1>
  <p class="text-sm pb-5 text-card-300 border-b-2 px-4">{description}</p>
  <p class="text-xs py-5 text-card-300 px-4">{author}</p>
</article>
<style></style>
